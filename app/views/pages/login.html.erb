<h1>Login</h1>

<div class="login">
  <%= form_with model: @login_form, url: login_path, local: true do |form| %>
    <div>
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>
    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <div>
      <%= form.submit 'Login' %>
    </div>
  <% end %>
</div>